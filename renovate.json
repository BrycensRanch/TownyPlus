{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":semanticCommitTypeAll(chore)"
  ],
  "prCreation": "not-pending",
  "semanticCommits": "enabled",
  "automerge": true,
  "gradle": {
    "enabled": true
  },
  "labels": [
    "dependencies"
  ],
  "automergeSchedule": [
    "after 10pm every weekday",
    "before 5am every weekday",
    "every weekend"
  ],
  "prConcurrentLimit": 0,
  "prHourlyLimit": 0,
  "branchConcurrentLimit": 20,
  "baseBranches": ["alpha", "beta"],
  "branchPrefix": "dep/",
  "branchPrefixOld": "renovate/",
  "timezone": "America/New_York",

  "packageRules": [
    {
      "matchPackagePrefixes": [
        "cloud.commandframework:"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "semanticCommitType": "fix",
      "groupName": "Cloud Command Framework",
      "groupSlug": "cloud-command-framework"
    },
    {
      "matchPackagePrefixes": [
        "com.fasterxml.jackson:"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "groupName": "FasterXML Jackson",
      "groupSlug": "fasterxml-jackson"
    },
    {
      "matchPackagePrefixes": [
        "net.kyori:"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "groupName": "Kyori Adventure",
      "semanticCommitType": "fix",
      "groupSlug": "kyori-adventure"
    },
    {
      "matchDepTypes": [
        "action"
      ],
      "labels": [
        "actions"
      ],
      "pinDigests": true
    }
  ]

}

{
  "tagSign": true,
  "branches": [
    "master",
    "+([0-9])?(.{+([0-9]),x}).x",
    {
      "name": "beta",
      "channel": "beta",
      "prerelease": true
    },
    {
      "name": "alpha",
      "channel": "alpha",
      "prerelease": true
    },
    {
      "name": "rc",
      "channel": "rc",
      "prerelease": true
    }
  ],
  "plugins": [
    [
      "@semantic-release/commit-analyzer",
    {
      "preset": "conventionalcommits",
      "parserOpts": {
        "noteKeywords": ["BREAKING CHANGE", "BREAKING CHANGES", "BREAKING"]
      }
    }
    ],
    "@romvnly/gradle-semantic-release-plugin",
    [
      "@semantic-release/release-notes-generator",
      {
        "parserOpts": {
          "noteKeywords": ["BREAKING CHANGE", "BREAKING CHANGES", "BREAKING"]
        },
        "preset": "conventionalcommits",
        "header": "TownyPlus Changelog",
        "presetConfig": {
          "types": [
            {
              "type": "breaking",
              "section": "â— MAJOR â—",
              "hidden": false
            },
            { "type": "feat", "section": "âœ¨ Feature âœ¨", "hidden": false },
            { "type": "fix", "section": "ğŸ› Bugfix ğŸ›", "hidden": false },
            { "type": "docs", "section": "ğŸ“  Documentation", "hidden": false },
            {
              "type": "chore",
              "section": "ğŸ”¨  Misc.",
              "hidden": false
            },
            {
              "type": "ci",
              "section": "ğŸ“¦ï¸ Build and CI",
              "hidden": false
            },
            {
              "type": "refactor",
              "section": "âš¡ï¸ Code Performance",
              "hidden": false
            },
            {
              "type": "test",
              "section": "ğŸ§ª Code Test",
              "hidden": false
            },
            {
              "type": "style",
              "section": "ğŸ’„ Design",
              "hidden": false
            },
            { "type": "HOTFIX", "section": "ğŸ”¥ Hotfix ğŸ”¥", "hidden": false }
          ]
        }
      }
    ],
    ["@semantic-release/exec", {
      "publishCmd": "node ./update-versions.js ${nextRelease.version}"
    }
    ],
    [
      "@semantic-release/git",
      {
        "assets": [
          "gradle.properties",
          "CHANGELOG.md"
        ]
      }
    ],
    [
      "@semantic-release/github",
      {
        "assets": [
          {
            "path": "**/build/libs/*.jar"
          }
        ],
        "addReleases": "bottom"
      }
    ]
  ]
}
